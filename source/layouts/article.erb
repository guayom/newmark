<% wrap_layout :content do %>

  <h1 class="page-title"><%= article.title %></h1>
  <%= "<h2>#{article.subtitle}</h2>" if article.subtitle.present? %>

  <% unless article.image.nil? %>
  <div class="body-txt">
    <%= image_tag article.image.file.width(550).to_url %>
  </div>
  <% end %>

  <div class="highlight">
    <%= article.intro %>
  </div>

  <p>
    <strong><em>Por Comunicaci√≥n Newmark Grubb Central America</em></strong><br>
    <a href="mailto:comunicacion@ngcentralamerica.com">comunicacion@ngcentralamerica.com</a>
  </p>

  <%= article.content %>

  <% content_for(:sidebar) do %>
    <ul id="navID" class="navlist">
      <li><h4>Other articles</h4></li>
      <% dato.articles.sort_by { |resource| resource.date }.reverse.first(4).each do |article| %>
        <li>
          <a href="/media-center/press-releases/<%= article.title.parameterize %>/"><%= article.title %></a>
        </li>
      <% end %>
      <li><a href="/media-center/press-releases/">More articles</a></li>
      <li><a href="/media-center/in-the-news/">In the news</a></li>
    </ul>
  <% end %>

<% end %>
