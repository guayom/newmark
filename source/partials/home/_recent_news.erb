<div class="recent-news">
  <div class="title-bar">
    <div class="title-bar-main">
      <h2>Recent news</h2>
    </div>
    <div class="title-bar-secondary">
      <a href="/media-center/press-releases/">MÃ¡s noticias</a>
    </div>
  </div>
  <dl>
    <% dato.articles.sort_by { |resource| resource.date }.reverse.first(5).each do |article| %>
      <dt><%= article.date %></dt>
      <dd>
        <h4>
          <a href="/media-center/press-releases/<%= article.title.parameterize %>/"><%= article.title %></a>
        </h4>
      </dd>
    <% end %>
  </dl>
</div>
